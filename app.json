{
  "expo": {
    "name": "PoliDesk",
    "slug": "polidesk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splsah-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FEF1EB"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.PoliDesk.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FEF1EB"
      },
      "navigationBar": {
        "visible": true,
        "barStyle": "dark-content",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": false,
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "74f9c06f-67ae-468f-b5cc-5b25de7ceb5c"
      }
    },
    "plugins": [
      "expo-image-picker",
      "expo-secure-store"
    ],
    "owner": "deep_roy"
  }
}
